{
  "manifest_version": 2,

  "name": "Traductor",
  "description": "Translate terms via the Ultralingua API",
  "version": "0.1",

  "permissions": [{"fileSystem": ["write"]}],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "settings.html"
  },
  "background" : {
    "scripts" : ["js/react-with-addons.min.js", "js/JSXTransformer.js", "js/jquery-1.11.1.min.js", "js/background.js", "js/options.js", "js/settings.js"],
    "persistent" : false
  },
  "options_page": "options.html",
  "content_scripts": [{
      "js": ["jquery-1.11.1.min.js", "settings.js", "traductor.js"],
      "css": ["style.css"],
      "matches": [ "http://*/*", "https://*/*"]
    }]
}
